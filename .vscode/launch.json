{
  // ShakeScouter-NW: VSCode 統一実行構成
  // F5 で "python -m ShakeScouter.shakescout" が実行される
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ShakeScouter (module)",
      "type": "python",
      "request": "launch",
      "module": "ShakeScouter.shakescout",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": []
    }
  ]
}
